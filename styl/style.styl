.graphDiv
    fill-abs()
.graph 
    font-family         fontMono
    font-size           64px
    
.price
    position            absolute
    right               0
    height              20px
    padding-left        5px
    padding-right       5px
    transform           translateY(-50%)
    white-space         nowrap
    pointer-events      none

    &.mouse
        background-color    bgColor
        color               #666
        
    &.kline
        background-color    bgColor
        &.green
            color           wickUpColor
        &.red
            color           wickDownColor
            
    &.current    
        font-weight         bold
        font-size           16px
    &.current.green
        color               #111
        background-color    upColor
    &.current.red
        color               #111
        background-color    downColor
    
.time
    position            absolute
    bottom              0
    height              20px
    color               #444
    padding-left        30px
    padding-right       30px
    transform           translateX(-50%)
    white-space         nowrap
    background          linear-gradient(to left,rgba(0,0,0,0), bgColor, bgColor, rgba(0,0,0,0))
    pointer-events      none
    
.timespan
    color               #66f

.interval
    color               #666

