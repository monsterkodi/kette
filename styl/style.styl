.walletDiv    
    fill-abs()
    background-color    bgColor

.heatmap    
    fill-abs()
    display             flex
    flex-direction      row
    transform           translateZ(0)

.heatmapItem
    overflow            hidden
    display             flex
    color               white
    &.horz
        flex-direction  row
    &.vert
        flex-direction  column
        
.heatmapCoin
    overflow            hidden
    display             flex
    flex-direction      column
    box-sizing          border-box
        
.coinPercent
    padding-bottom      10px
.coinName
    padding-top         10px
    
.coinButton
    align-self          center
    margin              auto
    line-height         200%

.heatmapCoin:hover .coinName
    align-self      center
    display         inherit !important

.heatmapCoin:hover .coinPercent
    align-self      center
    display         inherit !important
    
.heatmapCoin:hover .coinUSDT
    align-self      center
    display         inherit !important
    background-color #000
    padding-left     0.3em
    padding-right    0.3em

.heatmapCoin
    &:hover 
        border  1px solid

