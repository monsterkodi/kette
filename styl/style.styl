.titleContainer
    margin-left         10px
    padding             0
    display             inline-flex
    flex                100 1 50%
    
.titleContainer.titleCoin
    padding-top         2px
    flex                1 100 auto
    align-self          center
    text-align          center

.titleContainer.titleWallet
