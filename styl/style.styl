    background-color    frameColor
    position            absolute
    left                0
    bottom              0
    width               80px
    
.favButton
    width               20px
    height              20px
    padding-left        3px
    padding-right       3px
    padding-top         2px
    padding-bottom      1px
    
.favButton
    &:hover 
        background-color  #aaa  !important
    &:active
